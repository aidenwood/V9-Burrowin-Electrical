    </SectionContent>


    <SectionContent>
      <Fragment slot="smltitle">
        Leading Gold Coast Electricians
      </Fragment>
      <Fragment slot="title">
        Central Gold Coast
      </Fragment>
      <Fragment slot="desc">
        <ul class="grid grid-cols-2 gap-y-4 gap-x-8">
          <li>Chevron Island</li>
          <li>Paradise Waters</li>
          <li>Broadbeach Waters</li>
          <li>Broadbeach</li>
